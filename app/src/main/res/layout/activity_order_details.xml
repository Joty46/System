    <TextView
        android:id="@+id/orderwho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="24dp"
        android:text="কে অর্ডার করেছেন:"
        android:textColor="#B3000000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/orderusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderwho"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawablePadding="20dp"
        android:hint="নাম"
        android:padding="20dp"
        android:textColor="#80000000"
        android:textColorHint="#80000000"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/orderwhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderusername"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="24dp"
        android:text="কোথায় অর্ডার পৌঁছে দিতে হবে :"
        android:textColor="#B3000000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/orderlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderwhere"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawablePadding="20dp"
        android:hint="ঠিকানা"
        android:padding="20dp"
        android:textColor="#80000000"
        android:textColorHint="#80000000"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/orderwhatqty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderlocation"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="24dp"
        android:text="পরিমাণ :"
        android:textColor="#B3000000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/orderquantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderwhatqty"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawablePadding="20dp"
        android:hint="পরিমাণ"
        android:padding="20dp"
        android:textColor="#80000000"
        android:textColorHint="#80000000"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/orderrecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderquantity"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="24dp"
        android:text="বিশেষ কোন তথ্য/ সুপারিশ:"
        android:textColor="#B3000000"
        android:textSize="20dp"
        android:textStyle="italic" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha=".5"
        android:scaleType="centerCrop"
        android:src="@drawable/delivery" />

    <TextView
        android:id="@+id/orderspecialrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderrecommendation"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:drawablePadding="20dp"
        android:hint="নেই"
        android:padding="20dp"
        android:textColor="#80000000"
        android:textColorHint="#80000000"
        android:textSize="24dp" />




</RelativeLayout>