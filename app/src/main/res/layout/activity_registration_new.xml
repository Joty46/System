<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationNew">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/undraw_fingerprint_re_uf3f"/>

        <TextView
            android:id="@+id/createdialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:text="অ্যাকাউন্ট খুলুন"
            android:textColor="@color/text"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/niddialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createdialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="আপনার জাতীয় পরিচয়পত্রের নাম্বার"
            android:textColor="#B3000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nidnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/niddialogue"
            android:layout_marginTop="2dp"
            android:text="1234567890"
            android:textColor="#B3000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nidnumber"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="5dp"
            android:hint="মোবাইল নাম্বার"
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="#B3000000"
            android:textColorHint="#80000000" />

<!--        <EditText-->
<!--            android:id="@+id/email"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/mobile"-->
<!--            android:layout_marginStart="24dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginEnd="24dp"-->
<!--            android:layout_marginBottom="24dp"-->
<!--            android:background="#14000000"-->
<!--            android:drawableLeft="@drawable/ic_baseline_email_24"-->
<!--            android:drawablePadding="5dp"-->
<!--            android:hint="ই-মেইল অ্যাকাউন্ট"-->
<!--            android:inputType="text"-->
<!--            android:padding="20dp"-->
<!--            android:textColor="#B3000000"-->
<!--            android:textColorHint="#80000000" />-->

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="5dp"
            android:hint="ব্যবহারকারীর নাম"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="#B3000000"
            android:textColorHint="#80000000" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="5dp"
            android:hint="গোপন পিন নাম্বার দিন"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#B3000000"
            android:textColorHint="#80000000" />


        <EditText
            android:id="@+id/conpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="5dp"
            android:hint="গোপন পিন নাম্বারটি পুনরায় লিখুন"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#B3000000"
            android:textColorHint="#80000000" />

        <TextView
            android:id="@+id/uroletxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/conpass"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="10dp"
            android:text="ব্যবহারকারীর ভুমিকা:"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userrole"
            android:layout_below="@id/uroletxt"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="15dp">

            <RadioButton
                android:id="@+id/rbuyer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Buyer"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rseller"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:textSize="20dp" />
        </RadioGroup>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userrole"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_background"
            android:text="রেজিস্টার" />

    <LinearLayout
        android:id="@+id/lastdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আপনার কি ইতিমধ্যে অ্যাকাউন্ট আছে?"
            android:textColor="#B3000000"/>
        <TextView
            android:id="@+id/loginnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="লগইন করুন"
            android:textStyle="bold"
            android:textColor="#B3000000"/>
    </LinearLayout>
    </RelativeLayout>

</ScrollView>